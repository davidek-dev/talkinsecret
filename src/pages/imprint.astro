<style>
  /* Scrolling für statische Seiten erzwingen */
  html, body {
    overflow: auto !important;
    height: auto !important;
    max-height: none !important;
  }
  
  .prose h2 {
    border-bottom: 2px solid #444;
    padding-bottom: 0.5rem;
  }
  
  .prose a {
    color: #60a5fa;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #93c5fd;
  }
  
