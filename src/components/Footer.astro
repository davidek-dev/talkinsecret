---
// Footer.astro
import '../styles/footer.css';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="footer_body z-10 w-full">
  <footer 
    id="footer" 
    class="w-full" 
    role="contentinfo"
    aria-labelledby="footer-heading"
  >
    <!-- Backdrop Blur Layer: Direkt nach <footer> platzieren -->
    <div class="backdrop" aria-hidden="true"></div>
    <h2 id="footer-heading" class="sr-only">Footer</h2>
    
    <!-- Main Footer Content -->
    <div class="footer-content w-full max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Brand and Social Section -->
      <div class="footer-brand text-center lg:text-left">
        <h3 class="font-bandfont text-3xl sm:text-4xl lg:text-5xl pb-4 lg:pb-6">
          Talkin' Secret
        </h3>
        
        <!-- Social Media Links - Gleiche Icons wie Navbar -->
        <div class="social-links flex justify-center lg:justify-start gap-3 xl:gap-4" role="group" aria-labelledby="social-heading">
