---
// Footer.astro
import Layout from '../layouts/Layout.astro';
import '../styles/footer.css';

interface Props {
  title: string;
}

// Footer.astro
const { title } = Astro.props;
---

<Layout title={title}>
  <div class="footer_body z-10">
    <footer id="footer">
      <div class="col col1">
        <h3 class="font-bandfont text-5xl pb-5">Talkin' Secret</h3>
        <div class="social">
          <a class="w-6" href="https://open.spotify.com/intl-de/artist/1MdTDN4vXdIXvmTMn3pLjQ?si=qLFKiOyNSfy6teRT4kvahw" target="_blank" class="link"><img src="https://img.icons8.com/?size=100&id=11116&format=png&color=FFFFFF" alt="" /></a>
          <a class="w-6" href="https://www.instagram.com/talkinsecret/" target="_blank" class="link"><img src="https://img.icons8.com/?size=100&id=32309&format=png&color=FFFFFF" alt="" /></a>
          <a class="w-6" href="https://www.youtube.com/@talkingsecret6500" target="_blank" class="link"><img src="https://img.icons8.com/?size=100&id=37326&format=png&color=FFFFFF" alt="" /></a>
          <a class="w-6" href="https://www.tiktok.com/@talkinsecret" target="_blank" class="link"><img src="https://img.icons8.com/?size=100&id=118638&format=png&color=FFFFFF" alt="" /></a>
        </div>
      </div>

      <div class="col col3 leading-8">
        <a href="#videos"><p>Videos</p></a>
        <a href="#music"><p>Music</p></a>
        <a href="#merch"><p>Merch</p></a>
        <a href="#contact"><p>Contact</p></a>
      </div>
      <div class="backdrop"></div>
    </footer>
  </div>
</Layout>