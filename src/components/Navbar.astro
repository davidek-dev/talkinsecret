---
import MobileNav from './MobileNav.tsx';
---

<style>
/* Responsive Abstände für Social Media Icons */
.social-icons-container {
  gap: 0.5rem;
}

@media (min-width: 1200px) {
  .social-icons-container {
    gap: 0.75rem !important;
  }
}

@media (prefers-reduced-motion: reduce) {
  .navbar a {
    transition: none;
  }
}
</style>
</style>

<nav 
  class="navbar z-30 h-auto bg-gradient-to-b from-white/10 via-white/0 to-transparent backdrop-blur-sm w-full" 
  role="navigation"
  aria-label="Hauptnavigation"
>
  <div class="relative flex justify-between items-center w-full px-4 sm:px-6 xl:px-8 py-4 max-w-screen-2xl mx-auto h-[110px]">
    
    <!-- Mobile Hamburger Menu: Sichtbar bis 1024px -->
    <div class="flex-1 flex justify-start lg:hidden">
      <MobileNav client:load />
    </div>

    <!-- Desktop Links: Sichtbar ab 1024px -->
    <div class="hidden lg:flex flex-1 justify-start">
      <ul class="flex flex-row gap-2 xl:gap-6 text-base xl:text-lg items-center" role="menubar">
        <li role="none"><a href="/#videos" class="hover:opacity-80 transition-opacity py-2 px-3 focus:opacity-80 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-transparent rounded-md" role="menuitem">Videos</a></li>
        <li role="none"><a href="/#music" class="hover:opacity-80 transition-opacity py-2 px-3 focus:opacity-80 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-transparent rounded-md" role="menuitem">Music</a></li>
        <li role="none"><a href="/#merch" class="hover:opacity-80 transition-opacity py-2 px-3 focus:opacity-80 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-transparent rounded-md" role="menuitem">Merch</a></li>
        <li role="none"><a href="/#gigs" class="hover:opacity-80 transition-opacity py-2 px-3 focus:opacity-80 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-transparent rounded-md" role="menuitem">Gigs</a></li>
        <li role="none"><a href="/#contact" class="hover:opacity-80 transition-opacity py-2 px-3 focus:opacity-80 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-transparent rounded-md" role="menuitem">Contact</a></li>
      </ul>
    </div>
    
    <!-- Logo: Immer zentriert, auch auf Mobile -->
    <div class="flex-1 flex justify-center items-center absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 lg:static lg:translate-x-0 lg:translate-y-0">
      <a 
        href="/" 
        class="text-3xl sm:text-4xl lg:text-4xl xl:text-5xl font-bandfont text-white text-center leading-tight cursor-pointer hover:opacity-80 transition-opacity focus:opacity-80 focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-transparent rounded-sm px-2 py-1"
        aria-label="Talkin' Secret - Startseite"
      >
        Talkin' Secret
      </a>
    </div>
    
    <!-- Social Icons: Sichtbar ab 1024px -->
    <div class="hidden lg:flex flex-1 justify-end items-center social-icons-container">
       <a class="p-2 xl:p-3 hover:bg-white/10 rounded-lg transition-colors focus:bg-white/10 focus:outline-none focus:ring-2 focus:ring-white/50" href="https://open.spotify.com/intl-de/artist/1MdTDN4vXdIXvmTMn3pLjQ?si=qLFKiOyNSfy6teRT4kvahw" target="_blank" rel="noopener noreferrer" aria-label="Talkin' Secret auf Spotify anhören (öffnet neues Fenster)">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="xl:w-5 xl:h-5" viewBox="0 0 16 16" aria-hidden="true"><path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.669 11.538a.5.5 0 0 1-.686.165c-1.879-1.147-4.243-1.407-7.028-.77a.499.499 0 0 1-.222-.973c3.048-.696 5.662-.397 7.77.892a.5.5 0 0 1 .166.686m.979-2.178a.624.624 0 0 1-.858.205c-2.15-1.321-5.428-1.704-7.972-.932a.625.625 0 0 1-.362-1.194c2.905-.881 6.517-.454 8.986 1.063a.624.624 0 0 1 .206.858m.084-2.268C10.154 5.56 5.9 5.419 3.438 6.166a.748.748 0 1 1-.434-1.432c2.825-.857 7.523-.692 10.492 1.07a.747.747 0 1 1-.764 1.288"/></svg>
