<section class="">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="grid justify-center gap-12 lg:grid-cols-2 lg:gap-8">
      <div class="flex flex-col items-center gap-4 sm:gap-6">
        <h2
          class="text-3xl pt-16 text-center font-medium tracking-tight sm:text-4xl text-secondary-foreground"
        >
          Get in touch with us!
        </h2>
        <p
          class="text-center max-w-lg text-lg text-secondary-foreground"
        >
          Suggestions for venues or just want to leave a message? Use the
          contact form or write us alternatively via WhatsApp.
        </p>
        <div class="flex justify-center">
          <a href="https://wa.me/+4915252018056?text=Hi!%20I%20would%20like%20to%20get%20in%20touch%20with%20you.">
          <button
            class="bg-primary hover:bg-primary/90 inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-primary-foreground transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
            type="submit"
          >
            WhatsApp
          </button>
        </a>
        </div>
      </div>
      <form
        name="contact"
        data-netlify="true"
        netlify-honeypot="bot-field"
        method="POST"
        class="mt-3 flex flex-col gap-y-6"
      >
        <div>
          <p class="hidden">
            <label>
              Don’t fill this out if you’re human: <input name="bot-field" />
            </label>
          </p>
        </div>

        <!-- Full name input -->
        <div class="">
          <label for="full-name" class="sr-only">Your name</label>
          <input
            type="text"
            name="full-name"
            id="full-name"
            autocomplete="name"
            class="bg-[#131c20] text-foreground placeholder:text-muted-foreground block w-full appearance-none rounded-2xl  px-4 py-4  transition focus:outline-none focus:ring-2 focus:ring-ring"
            placeholder="Your name"
          />
        </div>

        <!-- Email input -->
        <div>
          <label for="email" class="sr-only">E-Mail</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="bg-[#131c20] text-foreground placeholder:text-muted-foreground block w-full appearance-none rounded-2xl  px-4 py-4  transition focus:outline-none focus:ring-2 focus:ring-ring"
            placeholder="E-Mail"
          />
        </div>

        <!-- Message textarea -->
        <div>
          <label for="message" class="sr-only">Message</label>
          <textarea
            name="message"
            id="message"
            rows="3"
            class="bg-[#131c20] text-foreground placeholder:text-muted-foreground block w-full appearance-none rounded-2xl  px-4 py-4  transition focus:outline-none focus:ring-2 focus:ring-ring"
            placeholder="Your message for us"></textarea>
        </div>

        <div>
          <button
            class="bg-primary hover:bg-primary/90 focus-visible:outline-primary inline-flex items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-primary-foreground transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
            type="submit"
          >
            Send
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
