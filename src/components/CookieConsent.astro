---
// CookieConsent.astro
---

<div id="cookie-banner" class="cookie-banner">
  <div class="cookie-content">
    <div class="cookie-text">
      <h3>This website uses cookies</h3>
      <p>
        We use cookies to provide you with the best experience on our website. 
        This includes YouTube videos and other external content. 
        <a href="/privacy" class="cookie-link">Learn more</a>
      </p>
    </div>
    <div class="cookie-buttons">
      <button id="cookie-accept" class="cookie-btn cookie-accept">
        Accept all
      </button>
      <button id="cookie-essential" class="cookie-btn cookie-essential">
        Essential only
      </button>
    </div>
  </div>
</div>

<style>
  .cookie-banner {
    position: fixed;
    bottom: 2rem;
    left: 2rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1rem;
    padding: 1.5rem;
    z-index: 1000;
    max-width: 400px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transform: translateX(-150%);
    transition: transform 0.3s ease-in-out;
    pointer-events: auto;
  }

  .cookie-banner.show {
    transform: translateX(0);
  }

  .cookie-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .cookie-text h3 {
    color: #ffffff;
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: bold;
  }

  .cookie-text p {
    color: #cccccc;
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .cookie-link {
    color: #ffffff;
    text-decoration: underline;
    transition: color 0.2s;
  }

  .cookie-link:hover {
    color: #cccccc;
  }

  .cookie-buttons {
    display: flex;
    gap: 0.75rem;
    flex-direction: column;
  }

  .cookie-btn {
    padding: 0.6rem 1rem;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 0.85rem;
    text-align: center;
  }

  .cookie-accept {
    background: #ffffff;
    color: #131c20;
  }

  .cookie-accept:hover {
    background: #f0f0f0;
    transform: translateY(-2px);
  }

  .cookie-essential {
    background: transparent;
    color: #ffffff;
    border: 1px solid #ffffff;
  }

  .cookie-essential:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .cookie-banner {
      left: 1rem;
      right: 1rem;
      bottom: 1rem;
      max-width: calc(100vw - 2rem);
    }

    .cookie-content {
      gap: 1rem;
    }

    .cookie-buttons {
      flex-direction: row;
      gap: 0.5rem;
    }

    .cookie-btn {
      flex: 1;
      font-size: 0.8rem;
      padding: 0.5rem;
    }

    .cookie-text h3 {
      font-size: 1rem;
    }

    .cookie-text p {
      font-size: 0.8rem;
    }
  }
</style>

<script is:inline>
  // Cookie consent functionality
  document.addEventListener('DOMContentLoaded', function() {
    const banner = document.getElementById('cookie-banner');
    const acceptBtn = document.getElementById('cookie-accept');
    const essentialBtn = document.getElementById('cookie-essential');

    // Check if user has already made a choice
    const cookieConsent = localStorage.getItem('cookieConsent');
    
    if (!cookieConsent || cookieConsent === 'none') {
      // Show banner after a short delay
      setTimeout(() => {
        banner.classList.add('show');
      }, 1000);
    }

    // Accept all cookies
    acceptBtn.addEventListener('click', function() {
      localStorage.setItem('cookieConsent', 'accepted');
      localStorage.setItem('allowAnalytics', 'true');
      localStorage.setItem('allowYouTube', 'true');
      hideBanner();
      enableAllFeatures();
      
      // Trigger a custom event to notify video components
      window.dispatchEvent(new CustomEvent('cookieConsentChanged', {
        detail: { 
          cookieConsent: 'accepted',
          allowYouTube: 'true'
        }
      }));
    });

    // Accept only essential cookies
    essentialBtn.addEventListener('click', function() {
      localStorage.setItem('cookieConsent', 'essential');
      localStorage.setItem('allowAnalytics', 'false');
      localStorage.setItem('allowYouTube', 'false');
      hideBanner();
      disableNonEssentialFeatures();
      
      // Trigger a custom event to notify video components
      window.dispatchEvent(new CustomEvent('cookieConsentChanged', {
        detail: { 
          cookieConsent: 'essential',
          allowYouTube: 'false'
        }
      }));
    });

    function hideBanner() {
      banner.classList.remove('show');
      setTimeout(() => {
        banner.style.display = 'none';
      }, 300);
    }

    function enableAllFeatures() {
      // No need to manipulate DOM elements since React handles the state
      // Just trigger the event - React components will handle their own display logic
    }

    function disableNonEssentialFeatures() {
      // No need to manipulate DOM elements since React handles the state
      // Just trigger the event - React components will handle their own display logic
    }

    // Apply settings on page load if consent was already given
    // React components will handle their own state based on localStorage values
  });
</script>
